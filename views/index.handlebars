
<div class="container text-center">
<h1 class=>News Scrape!</h1>
<h4 class=>A resource site for all of your news!</h4>
<button class="btn btn-primary" id="scrubArticles">Scrub!</button>
</div>

<div class="mt-3" id="articles">

    {{#each articles}}
    <br>
    <div class="container col-md col-xs" id="container_{{_id}}">
        <div class="row">
            <div class="col-lg-2 col-md-0 col-sm-0 col-xs-0"></div>
            <div class="d-flex justify-content-center col-lg-4 col-md-12-mx-auto col-sm-12-mx-auto col-xs-12-mx-auto">
                <img class="text-center image-size" src="{{image}}">
            </div>

            <div class="border align-baseline col-lg-5 col-md-12 col-sm-12 col-xs-12">
                <a class="d-flex justify-content-center" href="https://www.nytimes.com/{{link}}">{{title}}</a>
                <p class="d-flex justify-content-center">{{summary}}</p>
                <p class="d-flex justify-content-center" id="showComment_{{_id}}">
                {{#each comment}}    
                    {{body}}
                {{/each}}
                </p>
            
                <div class="text-center">
                    <button class="btn btn-primary m-2 deleteArticle" data-id={{_id}}>Delete Article</button>
                    <button class="btn btn-primary m-2 addComment" data-id={{_id}}>Comment</button>
                        <div class="align-baseline" id="{{_id}}">
                        {{!-- <textarea id="test1"></textarea>
                        <button data-id={{_id}} id="saveComment">Add Comment</button> --}}
                        </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-0 col-sm-0 col-xs-0"></div>
        </div>
    </div>
    {{/each}}


</div>

<script src="/assets/js/app.js" type="text/javascript"></script>